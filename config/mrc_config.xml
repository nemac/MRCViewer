<?xml version="1.0" encoding="utf-8" ?>
<config>
  <application title="WNC Vitality Index GIS Viewer" >
  </application>
  <extent xmin="-9400000" ymin="4150000" xmax="-8900000" ymax="4400000" xminZoom="-9400000" yminZoom="4150000" xmaxZoom="-8900000" ymaxZoom="4400000" wkid="102100"></extent> 
  <server map_path="http://arcgisserver7.nemac.org/ArcGIS/" >
  </server>
  <services>  
    <service name="vegdri" folder="EWS" label="USGS VegDRI Drought Assessment Products"/>
  </services>
  <images>
    <image name="Streets"   label="Streets"  url="http://server.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer"  selected="true" />
    <image name="Basic"     label="Basic"    url="http://services.arcgisonline.com/ArcGIS/rest/services/Canvas/World_Light_Gray_Base/MapServer" />
    <image name="Relief"    label="Relief"   url="http://server.arcgisonline.com/ArcGIS/rest/services/World_Shaded_Relief/MapServer" />
    <image name="Terrain"   label="Terrain"  url="http://server.arcgisonline.com/ArcGIS/rest/services/World_Terrain_Base/MapServer" />
    <image name="Imagery"   label="Imagery"  url="http://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer"/>
    <image name="Topo_Map"  label="Topo Map" url="http://services.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer" />
    <image name="USA_Topo"  label="USA Topo" url="http://server.arcgisonline.com/ArcGIS/rest/services/USA_Topo_Maps/MapServer"/>
    <image name="None"      label="None"     url="http://arcgisserver7.nemac.org/ArcGIS/rest/services/US/US_Jurisdictions_filled2/MapServer/" />
  </images>
  <legend type="Image" legendServerPath="http://ews.forestthreats.org/GIS/assets/Mashup_Legends/">
    <legendGroup name="RSAC-FHTET 2010" />
  </legend>
  <mapviews>
    <view name="CONUS_Vegetation_Monitoring_Tools" label="CONUS Vegetation Monitoring Tools" selected="true">
      <viewGroup name="US_Jurisdictions" />
      <viewGroup name="Natural" />
      <viewGroup name="Human" />
      <viewGroup name="Built" />
      <viewGroup name="Economic" />
    </view>
  </mapviews>

<wmsLayers>
  <wmsGroup gid="G01" name="US_Jurisdictions" label="Political Boundaries and Roads">
    <wmsSubgroup label="Boundaries and Jurisdictions">
      <wmsLayer
     selected="true"
	 lid="AAB"
	 visible="true"
	 url="http://hail.nemac.org/ArcGIS/services/MRC/Jurisdictions/MapServer/WMSServer?TRANSPARENT=true"
	 srs="EPSG:4326"
	 layers="4"
	 styles="default"
	 identify="false"
	 name="Counties"
	 legend="http://www1.nemac.unca.edu/NEMAC_MapViewer/assets/Mashup_Legends/MRC/Jurisdictions/Counties.png"/>
      <wmsLayer
	 lid="AAC"
	 visible="false"
	 url="http://hail.nemac.org/ArcGIS/services/MRC/Jurisdictions/MapServer/WMSServer?TRANSPARENT=true"
	 srs="EPSG:3785"
	 layers="3"
	 styles="default"
	 identify="true"
	 name="County Seats"
	 legend="http://www1.nemac.unca.edu/NEMAC_MapViewer/assets/Mashup_Legends/MRC/Jurisdictions/County_Seats.png"/>
	  <wmsLayer
	 lid="AAD"
	 visible="false"
	 url="http://hail.nemac.org/ArcGIS/services/MRC/Jurisdictions/MapServer/WMSServer?TRANSPARENT=true"
	 srs="EPSG:3785"
	 layers="2"
	 styles="default"
	 identify="true"
	 name="Municipal Boundaries" legend="http://www1.nemac.unca.edu/NEMAC_MapViewer/assets/Mashup_Legends/MRC/Jurisdictions/Municipal_Boundaries.png"/>
	  <wmsLayer
	 lid="BRH"
	 visible="false"
	 url="http://hail.nemac.org/ArcGIS/services/MRC/Jurisdictions/MapServer/WMSServer?TRANSPARENT=true"
	 srs="EPSG:3785"
	 layers="1"
	 styles="default"
	 identify="true"
	 name="COGs" legend="http://www1.nemac.unca.edu/NEMAC_MapViewer/assets/Mashup_Legends/MRC/Jurisdictions/COGs.png"/>
    </wmsSubgroup>
  </wmsGroup>
  <wmsGroup gid="G02" name="Natural" label="Natural">
    <wmsSubgroup label="Ecosystems">
      <wmsLayer
	 lid="BAA"
	 visible="false"
	 url="http://hail.nemac.org/ArcGIS/services/MRC/Natural/MapServer/WMSServer?TRANSPARENT=true"
	 srs="EPSG:3785"
	 layers="1"
	 styles="default"
	 identify="true"
	 name="Average Forest Canopy Height"
	 legend="http://www1.nemac.unca.edu/NEMAC_MapViewer/assets/Mashup_Legends/MRC/Natural/Average_Forest_Canopy_Height.png"/>
    </wmsSubgroup>
  </wmsGroup>
  <wmsGroup gid="G03" name="Human" label="Human">
    <wmsSubgroup label="Culture">
      <wmsLayer
	 lid="BAA"
	 visible="false"
	 url="http://hail.nemac.org/ArcGIS/services/MRC/Human/MapServer/WMSServer?TRANSPARENT=true"
	 srs="EPSG:4326"
	 layers="1"
	 styles="default"
	 identify="true"
	 name="Number of Music Venues per County"
	 legend="http://rain.nemac.org/~derek/fswms/html/vlayers?SERVICE=WMS&amp;REQUEST=GetLegendGraphic&amp;layer=cities&amp;VERSION=1.1.1&amp;FORMAT=image/png"/>
    </wmsSubgroup>
  </wmsGroup>

</wmsLayers>
  <tools>
    <tool name="Print" label="Print Map" />
    <tool name="Export" label="Export Map to JPG" />
    <tool name="Identify" label="Identify Features" linkFields=""/>
    <tool name="Phenograph" label="Graph NDVI" helpText = "Click the map to see NDVI for the point. Or, enter coordinates and click Make Graph."/>
    <tool name="ShareMap" label="Share this Map" helpText = "Copy the URL below to share this map with someone else."/>
  </tools>
  <links>
    <link name= "forwarn.forestthreats.org" url= "http://forwarn.forestthreats.org/"/>
    <link name="Data Disclaimer" url= "http://rain.nemac.org/~derek/fswms/html/view/assets/disclaimer.htm"/>
    <link name="FCAV Users Guide" url= "http://rain.nemac.org/~derek/fswms/html/view/assets/FCAV_Users_Guide_4.2.2012.pdf"/>
  </links>
</config>
